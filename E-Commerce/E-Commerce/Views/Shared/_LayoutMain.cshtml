                            <img src="~/Style/images/logo/logo.svg" alt="logo" class="logo">
                        </a>
                    </div>
                    <div class="col-xl-6 tf-md-hidden">
                        <nav class="box-navigation text-center">
                            <ul class="box-nav-ul d-flex align-items-center justify-content-center gap-30">
                                <li class="menu-item">@Html.ActionLink("Home", "Index", "Users", new { area = "" }, new { @class = "item-link" })</li>
                                <li class="menu-item">@Html.ActionLink("Category", "Category", "Users", new { area = "" }, new { @class = "item-link" })</li>
                                <li class="menu-item">@Html.ActionLink("Products", "Pruduct", "Users", new { area = "" }, new { @class = "item-link" })</li>
                                <li class="menu-item">@Html.ActionLink("Cart", "Cart", "Users", new { area = "" }, new { @class = "item-link" })</li>
