                                {
                                    <li class="menu-item">@Html.ActionLink("Logout", "Logout", "Users", new { area = "" }, new { @class = "item-link" })</li>
                                }
                                else
                                {
                                    <li class="menu-item">@Html.ActionLink("Login", "Login", "Users", new { area = "" }, new { @class = "item-link" })</li>
                                    <li class="menu-item">@Html.ActionLink("Register", "Register", "Users", new { area = "" }, new { @class = "item-link" })</li>


                                }
                            </ul>

                        </nav>
                    </div>
                    <div class="col-xl-3 col-md-4 col-3">
                        <ul class="nav-icon d-flex justify-content-end align-items-center gap-20">
                            <li class="nav-search"><a href="#canvasSearch" data-bs-toggle="offcanvas" aria-controls="offcanvasLeft" class="nav-icon-item"><i class="icon icon-search"></i></a></li>
                            <li class="nav-account">@Html.ActionLink(" ", "Profile", "Users", new { area = "" }, new { @class = "icon icon-account" })</li>
                            <li class="nav-wishlist"><a href="wishlist.html" class="nav-icon-item"><i class="icon icon-heart"></i></a></li>
                            <li class="nav-cart">@Html.ActionLink(" ", "Cart", "Users", new { area = "" }, new { @class = "icon icon-bag" })</li>
                        </ul>

                    </div>
                </div>
